{{#if navigation.length}}
<ul class="nav-list">
  {{#each navigation}}
  <li class="nav-item depth-{{or ../level 0}} {{#if (eq this.url @root.page.url)}} is-current-page{{/if}}"
    data-depth="{{or ../level 0}}" {{#with (page-by-url this.url)}} data-slug="{{this.asciidoc.attributes.page-slug}}"
    {{/with}}>
    {{#if this.content}}
    {{#if this.items.length}}
    {{!-- <button class="nav-item-toggle"></button> --}}
    {{/if}}
    {{!-- <i class="fa fa-caret-right" {{#unless this.items}}style="visibility: hidden" disabled="disabled"{{/unless}}></i> --}}
    {{#if this.url}}
    <a class="nav-link" href="
      {{~#if (eq this.urlType 'internal')}}{{{relativize this.url}}}
      {{~else}}{{{this.url}}}{{~/if}}">{{{this.content}}}</a>
    {{else}}
      <span class="nav-text {{#if this.items}}nav-item-toggle{{/if}}">{{{this.content}}}</span>
    {{/if}}
    {{/if}}
    {{> nav-tree navigation=this.items level=(increment ../level)}}
  </li>
  {{/each}}
</ul>
{{/if}}